<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".camera.CameraActivity">

    <fragment
        android:id="@+id/camera0"
        android:name="com.iristick.smartglass.examples.camera.CameraFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:camera_index="0" />

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonZoomIn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClickZoomIn"
            android:text="+"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonZoomOut"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClickZoomOut"
            android:text="–"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonToggleLight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClickToggleLight"
            android:text="☼"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonResetZoom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClickResetZoom"
            android:text="↺"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonShowInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClickShowInfo"
            android:text="ⓘ"
            android:textAllCaps="false"
            android:textSize="34sp" />

    </LinearLayout>

    <fragment
        android:id="@+id/camera1"
        android:name="com.iristick.smartglass.examples.camera.CameraFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:camera_index="1" />

</LinearLayout>
